{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ApplicationDefaults": {
    "MongoDBConnection": "mongodb://localhost:27017/",
    "MongoDBDatabaseName": "replayserver",

    // You need to override engine codes (FHttpNetworkReplayStreamer) to add authorization header.
    "bUseAuthorizationHeader": false,
    "AuthorizationHeaderValue": "testkey" // @TODO: MongoDB Authorization Keys (permanent/temp)
  }
}

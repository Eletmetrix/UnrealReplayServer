{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ApplicationDefaults": {
    "MongoDBConnection": "mongodb://localhost:27017/",   // MongoDB connection string.
    "MongoDBDatabaseName": "replayserver",                  // MongoDB database name (ideal for multiple replay servers).
    "bLiveStreamMode": false,                               // Remove all live sessions after they are ended.
    "HeartbeatCheckTime": 30000,                            // Heartbeat control loop delay time.
    "TimeoutOfLiveSession": 30,                             // Timeout value (in negative seconds) for inactive live sessions.

    // You need to override engine codes (FHttpNetworkReplayStreamer) to add authorization header.
    "bUseAuthorizationHeader": false,                       // enables authorization header check.
    "AuthorizationHeaderValue": "testkey",                  // @TODO: MongoDB authorization keys (permanent/temp).

    // User-Agent filter
    "UserAgentDetails": {
      // Possibly User-Agent format:        <product>/<product-version> <comment>
      // Example:                           UnrealTest/++UE4+Release-4.20-CL-4369336 Windows/10.0.22000.1.256.64bit
      // See full details on this webpage:  https://developer.mozilla.org/en-US/docs/Web/HTTP/Headers/User-Agent

      "AllowedUserAgents": [ // Common User-Agents.
        "UnrealTest/++UE4+Release-4.27-CL-4369336",
        "UnrealTest/++UE4+Release-4.27",
        "UnrealTest/++UE4+Release-CL-1256"
        //"Mozilla/5.0"                                     // Testing.
      ],
      "bUseUserAgentFilter": true                           // enables User-Agent filter.
    }
  }
}
